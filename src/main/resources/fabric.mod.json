{
  "schemaVersion": 1,
  "id": "onecontrol",
  "version": "${version}",

  "name": "OneControl",
  "description": "A mod aimed at both providing controller support, and a radial menu for other complex keybinds.",
  "authors": [
    "LemonHead"
  ],
  "contact": {
    "homepage": "https://lemonheadongit.github.io/OneControl/",
    "sources": "https://github.com/LemonHeadOnGit/OneControl/"
  },

  "license": "CC0-1.0",
  "icon": "assets/onecontrol/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.lemonhead.onecontrol.OneControl"
    ]
  },
  "mixins": [
    "onecontrol.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
